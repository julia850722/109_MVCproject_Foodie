@model IEnumerable<Foodie.Models.PuchaseRequest>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Buyer.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubmittedTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Seller)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Buyer.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Content)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SubmittedTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Seller.UserName)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
